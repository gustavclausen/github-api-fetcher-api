{
    "name": "github-api-fetcher-api",
    "version": "0.1.0",
    "description": "REST API wrapper for the data fetching client, github-api-fetcher",
    "author": "Gustav Kofoed Clausen <gustav@gustavclausen.com>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/gustavclausen/github-api-fetcher-api.git"
    },
    "bugs": {
        "url": "https://github.com/gustavclausen/github-api-fetcher-api/issues"
    },
    "homepage": "https://github.com/gustavclausen/github-api-fetcher-api#readme",
    "keywords": [
        "github",
        "api",
        "fetcher"
    ],
    "scripts": {
        "build": "rimraf dist && tsc -p tsconfig.build.json",
        "format": "prettier --write \"src/**/*.ts\"",
        "start": "ts-node -r tsconfig-paths/register src/main.ts",
        "start:dev": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/main.js\"",
        "start:debug": "tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect-brk dist/main.js\"",
        "start:prod": "node dist/main.js",
        "lint": "eslint -c .eslintrc.json src/**/*.ts test/**/*.ts",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage --maxWorkers=4",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json --maxWorkers=4"
    },
    "dependencies": {
        "@hapi/joi": "^15.1.0",
        "@nestjs/common": "^6.0.0",
        "@nestjs/core": "^6.0.0",
        "@nestjs/platform-express": "^6.0.0",
        "class-validator": "^0.9.1",
        "dotenv": "^8.0.0",
        "github-api-fetcher": "^2.1.0",
        "helmet": "^3.20.0",
        "lodash": "^4.17.15",
        "reflect-metadata": "^0.1.12",
        "rimraf": "^2.6.2",
        "rxjs": "^6.3.3"
    },
    "devDependencies": {
        "@nestjs/testing": "^6.1.1",
        "@types/dotenv": "^6.1.1",
        "@types/express": "^4.16.1",
        "@types/hapi__joi": "^15.0.3",
        "@types/helmet": "^0.0.43",
        "@types/jest": "^24.0.11",
        "@types/lodash": "^4.14.136",
        "@types/node": "^11.13.4",
        "@types/supertest": "^2.0.7",
        "@types/uuid": "^3.4.5",
        "@typescript-eslint/eslint-plugin": "^1.13.0",
        "@typescript-eslint/parser": "^1.13.0",
        "eslint": "^6.1.0",
        "eslint-config-prettier": "^6.0.0",
        "eslint-plugin-import": "^2.18.2",
        "eslint-plugin-prettier": "^3.1.0",
        "jest": "^24.7.1",
        "jest-express": "^1.10.1",
        "jest-junit": "^7.0.0",
        "prettier": "^1.17.0",
        "supertest": "^4.0.2",
        "ts-jest": "^24.0.2",
        "ts-node": "^8.1.0",
        "tsc-watch": "^2.2.1",
        "tsconfig-paths": "^3.8.0",
        "typescript": "^3.4.3",
        "uuid": "^3.3.2"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node",
        "reporters": [
            "default",
            "jest-junit"
        ]
    },
    "jest-junit": {
        "outputDirectory": "./coverage",
        "outputName": "./junit-results.xml"
    }
}
